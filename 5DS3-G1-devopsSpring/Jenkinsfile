pipeline {
    agent any

    tools {
        maven 'M2_HOME'
        jdk 'JAVA_HOME'
    }
  
    environment {
        // Allocate a a  maximum of 1024 MB (1 GB) of heap memory.
        MAVEN_OPTS = '-Xmx1024m'
    }

    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/chayma24/projet-devops.git',
                branch: 'chaima-gharbi',
                credentialsId: 'jenkins_token_backend'
            }
        }

        stage('Build') {
            steps {
                dir('DevOps_Project') {
                    sh 'mvn clean package'
                }
            }
        }

	stage('Test') {
            steps {
                dir('DevOps_Project') {
                    sh 'mvn test -Dspring.profiles.active=test'
                }
            }
        }
        
    stage('Build Docker Image') {
            steps {
                dir('DevOps_Project') {
                    script {
                        sh 'docker build -t $chaimagharbi-5ds3-g1-devopsspring .'
                    }
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "$docker_id", passwordVariable: 'ayana666#', usernameVariable: 'chayma24')]) {
                    sh 'docker login -u $chayma24 -p $ayana666#'
                    sh 'docker push $chaimagharbi/chaimagharbi-5ds3-g1-devopsspring'
                }
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
//             mail to: 'Chayma.Gharbi@esprit.tn',
//                  subject: "Jenkins Build Failed: ${env.JOB_NAME}",
//                  body: "Build ${env.BUILD_NUMBER} of job ${env.JOB_NAME} failed. Check Jenkins for details."
            echo 'Build failed'
        }
    }
}
